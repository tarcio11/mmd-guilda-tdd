{
  "compilerOptions": {
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  }
}
